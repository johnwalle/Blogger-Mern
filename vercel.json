{
    "version": 2,
    "builds": [
      {
        "src": "server",
        "use": "@vercel/node",
        "config": {
          "buildCommand": "npm run build:backend"
        }
      },
      {
        "src": "client/.next",  
        "use": "@vercel/static",
        "routes": [
          {
            "src": "/(.*)",
            "dest": "/index.html"
          }
        ]
      }
    ]
  }
  